    </head>
    <body>
	<?php
	$a=1;
	$starttime=microtime(true);     //获取开始懂得时间，后面的参数是可选参数
	for($i=0;$i<2000;$i++){      //microtime函数返回的是当前Unix时间戳和微秒数
		$a++;
	}
	$endtime=microtime(true);        //获取结束的时间
	echo "执行的时间是:".($endtime-$starttime)."秒"."\n";
	?>
	/**
	 * 测试gmdate()函数
	 */
	echo gmdate("M d Y H:i:s",time(0,0,0,1,1,2013));
    </body>
