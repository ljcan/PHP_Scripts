    <body>
	<?php
	$fruit="apple,banana,orange";
	echo "现有水果字符串$fruit"."</br>";
	$fru=strtok($fruit, ",");
	echo "水果".$fru."</br>";
	$frus=explode(",", $fruit);
	foreach (explode(",", $fruit) as $i) {
		echo "水果名称:".$i."</br>";
	}
	echo $frus[0]."</br>";
	echo $frus[1]."</br>";
	echo $frus[2]."</br>";
	
	?>
    </body>
