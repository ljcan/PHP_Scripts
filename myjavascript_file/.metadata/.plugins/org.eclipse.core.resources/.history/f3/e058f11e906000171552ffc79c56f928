	<?php
	$key="banana";
	foreach (count_chars($key,1) as $i) {
		echo $i;
	}
	echo'</br>';
	foreach (count_chars($key,1) as $i => $val) {
		echo "字符串中有 $val 个".chr($i)."</br>";
	}
	echo count_chars($key,3);
	?>
    </body>
